@model IEnumerable<MovieStoreApp.Models.MoviesModel>

@{
    ViewData["Title"] = "Movie View";
}

<h1>Movie View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
                Genre
            </th>
            <th>
                Runtime (minutes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movieModel in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => movieModel.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movieModel.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movieModel.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movieModel.Runtime)
                </td>
            </tr>
        }
    </tbody>
</table>